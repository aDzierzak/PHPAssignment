{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <h1>User index</h1>
    <table class ="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>
                    {% include 'user/_delete_form.html.twig' with {'identifier': user.id} only %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('user_new') }}">Create new</a>

{% endblock %}