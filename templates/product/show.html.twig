{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <h1>Product</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ product.image }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price.name }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ product.category.name }}</td>
        </tr>
        <tr>
            <th>Reviews for this Product</th>
            <td>
                {% for review in product.reviews %}
                    <li>
                        <a href="{{ url('review_show', {'id':review.id}) }}">
                            {{ review.id }} :: {{ review.description }}
                        </a>
                    </li>
                {% else %}
                    (no reviews yet)
                {% endfor %}
            </td>
        </tr>

    </table>




    <td><a href="{{ path('review_new', {'product': product.category}) }}">review product</a></td>

    <a href="{{ path('product_index') }}">back to list</a>





    {% if is_granted('ROLE_ADMIN') %}
               <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>


        {% include 'product/_delete_form.html.twig' with {'identifier': product.id} only %}
    {% endif %}

{% endblock %}